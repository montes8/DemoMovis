<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movie"
            type="pe.meria.entity.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_ten"
        android:layout_marginTop="@dimen/size_five"
        android:layout_marginEnd="@dimen/size_ten"
        android:layout_marginBottom="@dimen/size_five">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/size_fifteen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/size_two_hundred_twenty">

                <pe.meria.demovideos.component.RoundImageView
                    android:id="@+id/roundImageView"
                    android:layout_width="@dimen/size_one_hundred_twenty"
                    android:layout_height="@dimen/general"
                    android:scaleType="centerCrop"
                    android:background="@color/purple_100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="@dimen/general"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/size_twelve"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintStart_toEndOf="@+id/roundImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/txtTitleItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movie.title}"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_seventeen"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/size_ten"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtLanguageItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        setTextLanguageView="@{movie.originalLanguage}"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_fourteen"
                        android:layout_marginTop="@dimen/size_twelve"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/size_ten"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleItem" />

                    <TextView
                        android:id="@+id/txtPopularityItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        setTextDouble="@{movie.popularity}"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_fourteen"
                        android:layout_marginTop="@dimen/size_twelve"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/size_ten"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtLanguageItem" />

                    <TextView
                        android:id="@+id/txtDateItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_twelve"
                        android:layout_marginEnd="@dimen/size_ten"
                        android:text="@{movie.releaseDate}"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_fourteen"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtPopularityItem" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ProgressBar
                    android:id="@+id/progressBarItem"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/roundImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/roundImageView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>