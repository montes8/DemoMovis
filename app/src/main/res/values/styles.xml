<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <!--region SELECTOR-->
    <style name="Text12PoppinsRegularSelector" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_twelve</item>
        <item name="android:textColorHint">@drawable/selector_custom_color_text_edit</item>
    </style>

    <style name="Text10PoppinsRegularRedError" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_twelve</item>
        <item name="android:textColor">@color/red_200</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/red_200</item>
    </style>
</resources>
